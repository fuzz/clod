name: clod
version: 0.1.0.0
synopsis: Project file manager for Claude AI integrations
description: 
  clod helps manage file transfers between local projects and Claude AI's 
  project knowledge system. It respects .gitignore patterns, tracks modified files,
  and optimizes filenames for Claude's UI.
license: MIT
license-file: LICENSE
author: fuzz
maintainer: fuzz@github.com
category: AI, Development
build-type: Simple
cabal-version: >=1.10
extra-source-files: README.md, guardrails.md, project-instructions.md

library
  hs-source-dirs: src
  exposed-modules: Clod.Core
                 , Clod.FileSystem
                 , Clod.Git
                 , Clod.IgnorePatterns
                 , Clod.Output
                 , Clod.Types
  build-depends: base >= 4.7 && < 5
               , directory
               , filepath
               , process
               , text
               , aeson
               , bytestring
               , containers
               , time
               , temporary
               , mtl
               , transformers
               , unix
  default-language: Haskell2010
  ghc-options: -Wall

executable clod
  hs-source-dirs: app
  main-is: Main.hs
  build-depends: base >= 4.7 && < 5
               , clod
               , directory
               , filepath
               , text
               , aeson
               , bytestring
               , containers
               , time
               , process
               , optparse-applicative
  default-language: Haskell2010
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N

test-suite clod-test
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  other-modules: Clod.IgnorePatternsSpec
               , Clod.FileSystemSpec
               , Clod.GitSpec 
               , Clod.CoreSpec
  build-depends: base >= 4.7 && < 5
               , clod
               , directory
               , filepath
               , process
               , temporary
               , text
               , time
               , hspec
               , QuickCheck
               , unix
  default-language: Haskell2010
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N